<resources>
    <!-- New application theme. . . -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Pop up box theme -->
    <style name="AppTheme.popUpTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


    <!-- Pink application theme. . . -->
    <style name="PinkTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPink</item>
        <item name="colorAccent">@color/colorAccentPink</item>
        <item name="android:colorBackground">@color/colorBackgroundPink</item>
        <item name="android:buttonStyle">@style/PButton</item>
        <item name="android:textViewStyle">@style/PText</item>
        <item name="editTextStyle">@style/PText</item>
        <item name="spinnerStyle">@style/PSpinner</item>
        <item name="spinnerDropDownItemStyle">@style/PSpinner</item>
    </style>

    <!-- Pink Buttons -->
    <style name="PButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/pink_button</item>
        <item name="android:textColor">@color/colorPrimaryDarkPink</item>
    </style>

    <!-- Pink Text View -->
    <style name="PText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/pink_rectangle</item>
        <item name="android:textColor">@color/colorPrimaryDarkPink</item>
    </style>

    <!-- Pink Spinner View -->
    <style name="PSpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/pink_button</item>
        <item name="android:textColor">@color/colorPrimaryDarkPink</item>
